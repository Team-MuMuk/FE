<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/line"
        android:layout_width="372dp"
        android:layout_height="5dp"
        android:background="#F3F3F3"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_step0_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_step0_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STEP 0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="36dp"
        android:layout_marginTop="150dp"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_signup_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반갑습니다 ! \n회원가입을 해볼까요?"
        app:layout_constraintTop_toBottomOf="@id/tv_step0_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="36dp"
        android:layout_marginTop="3dp"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow"
        app:layout_constraintTop_toBottomOf="@id/tv_step0_title"
        app:layout_constraintStart_toStartOf="@id/tv_step0_title"
        android:layout_marginTop="180dp"
        />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next"
        android:background="@android:color/transparent"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="264dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>
