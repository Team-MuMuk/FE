<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="24dp"
    android:background="@drawable/bg_profile_border"
    android:gravity="center"
    android:elevation="8dp">

    <ImageView
        android:id="@+id/iv_profile_orange"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_user_profile_orange" />

    <ImageView
        android:id="@+id/iv_profile_white"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_user_profile_white" />

    <ImageView
        android:id="@+id/iv_profile_green"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_user_profile_green" />
</LinearLayout>
