<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mumuk.ui.mypage.MyPageFragment"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/title_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:src="@drawable/ic_settings"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/line_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#F3F3F3"
        app:layout_constraintTop_toBottomOf="@id/title_mypage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김자취님!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/img_profile"
        app:layout_constraintTop_toTopOf="@id/img_profile" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건강해지자!"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/img_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_profile"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:text="프로필 관리"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:background="@drawable/btn_mypage_select"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_favorites" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_favorites"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:text="찜한 레시피"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:background="@drawable/btn_mypage_select"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        app:layout_constraintStart_toEndOf="@id/btn_profile"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/line_2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="35dp"
        android:background="#F3F3F3"
        app:layout_constraintTop_toBottomOf="@id/btn_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/recipe_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근에 김자취님이 본 레시피"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/line_2"
        app:layout_constraintStart_toStartOf="@id/title_mypage" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_recipe_1"
        android:layout_width="180dp"
        android:layout_height="245dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_mypage_rounded"
        android:clipToOutline="true"
        app:layout_constraintTop_toBottomOf="@id/recipe_text"
        app:layout_constraintStart_toStartOf="@id/title_mypage">

        <ImageView
            android:id="@+id/img_mosaic_1"
            android:layout_width="0dp"
            android:layout_height="164dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_mosaic"
            android:background="@drawable/bg_mypage_rounded"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:layout_margin="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_recipe_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="연어 포케"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/img_mosaic_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/iv_heart_icon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🤍"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_recipe_title_1"
            app:layout_constraintStart_toStartOf="@id/tv_recipe_title_1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_recipe_2"
        android:layout_width="180dp"
        android:layout_height="245dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/bg_mypage_rounded"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="@id/card_recipe_1"
        app:layout_constraintStart_toEndOf="@id/card_recipe_1">

        <ImageView
            android:id="@+id/img_mosaic_2"
            android:layout_width="0dp"
            android:layout_height="164dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_mosaic"
            android:background="@drawable/bg_mypage_rounded"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:layout_margin="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_recipe_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="플레인 포케"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/img_mosaic_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/iv_heart_icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🤍"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_recipe_title_2"
            app:layout_constraintStart_toStartOf="@id/tv_recipe_title_2"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_3"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="23dp"
        android:background="#F3F3F3"
        app:layout_constraintTop_toBottomOf="@id/card_recipe_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/line_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ic_notification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_noti_heart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림 수신 동의"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/ic_notification"
            app:layout_constraintTop_toTopOf="@id/ic_notification"
            app:layout_constraintBottom_toBottomOf="@id/ic_notification"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/item_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ic_logout"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/ic_logout"
            app:layout_constraintTop_toTopOf="@id/ic_logout"
            app:layout_constraintBottom_toBottomOf="@id/ic_logout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_delete_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/item_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ic_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_delete_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_delete_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/ic_delete"
            app:layout_constraintTop_toTopOf="@id/ic_delete"
            app:layout_constraintBottom_toBottomOf="@id/ic_delete"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/inner_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/line_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>