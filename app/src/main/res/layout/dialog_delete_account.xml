<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_delete_account"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/btn_dialog_bg"
    android:gravity="center_horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="0dp">

    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_dialog_submessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="정말 탈퇴하시겠습니까?\n탈퇴 시, 데이터가 전부 손실됩니다."
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#A2A2A2"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#F3F3F3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="취소"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="13sp"
            android:background="@drawable/bg_dialog_cancel"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/btn_dialog_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="확인"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="13sp"
            android:background="@drawable/bg_dialog_confirm"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</LinearLayout>
